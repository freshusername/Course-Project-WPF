<Page x:Class="DemoMain.LogButtonPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DemoMain"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <StackPanel  Margin="70, 70, 0, 0" MinWidth="430" MinHeight="380">
            <Button x:Name="btnLogin" Content="Login" VerticalAlignment="Center" HorizontalAlignment="Center" Width="350" Height="75" Click="BtnLogin_Click" Margin="150"></Button>
        </StackPanel>
    </Grid>
</Page>
